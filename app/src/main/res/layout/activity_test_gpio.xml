<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GpioActivity">

    <Button
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/close"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/start_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="all light"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            />

        <Button
            android:id="@+id/start_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="all dark"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            />

        <Button
            android:id="@+id/net_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="request network"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            />

        <WebView
            android:id="@+id/net_webview"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>




</LinearLayout>